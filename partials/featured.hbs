{{#get "posts" filter="featured:true" limit="1" as |featured|}}
{{#foreach featured}}
<article class="feature-card-wide mdl-card mdl-shadow--4dp mdl-grid">
  <aside style="background-color:#1976D2; margin:0;" class="mdl-cell mdl-cell--2-col">
      <i style="position:relative; top:40px; left:30px;" class="mdi mdi-information-outline mdi-48px mdi-light"></i>
  </aside>
  <div class="mdl-cell mdl-cell--10-col">
    <div class="mdl-card__title">    
        <h2 class="mdl-card__title-text">
            <a href="{{url}}">{{{title}}}</a>        
        </h2>    
    </div>
    <div class="mdl-card__supporting-text">
        {{excerpt words="26"}} ...
        <span class="publish-date">Published {{date published_at timeago="true"}}</span>
    </div>
    <div class="mdl-card__actions mdl-card--border">
        <a href="{{url}}" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
        Read Now <i class="mdi mdi-arrow-right mdi-12px"></i>
        </a>
        <div class="share-buttons">
            <button id="{{slug}}-share-menu" class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect" title="Share">
                <i class="mdi mdi-share-variant"></i>
            </button>
            <ul class="mdl-menu mdl-menu--top-right mdl-js-menu mdl-js-ripple-effect"
                for="{{slug}}-share-menu">
                <li class="mdl-menu__item">
                    <a href="https://twitter.com/intent/tweet?text=Read this: {{title}}&url={{url absolute="true"}}" target="_blank">Twitter</a>
                </li>
                <li class="mdl-menu__item">
                    <a href="https://www.linkedin.com/shareArticle?mini=true&title={{title}}&url={{url absolute="true"}}" target="_blank">Linkedin</a>
                </li>
                <li class="mdl-menu__item">
                    <a href="https://www.facebook.com/share.php?u={{url absolute="true"}}" target="_blank">Facebook</a>
                </li>
                <li class="mdl-menu__item">
                    <a href="https://reddit.com/submit?url={{url absolute="true"}}&title={{title}}" target="_blank">Reddit</a>
                </li>
                <li class="mdl-menu__item">
                    <a href="https://plus.google.com/share?url={{url absolute="true"}}" target="_blank">Google+</a>
                </li>
            </ul>
        </div>
    </div>
  </div>
  
</article>
{{/foreach}}
{{/get}}